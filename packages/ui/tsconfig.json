{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "target": "ES2022",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "*.stories.tsx",
    "**/__mocks__"
  ]
}